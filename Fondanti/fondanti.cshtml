<script>


    // lagen maken
    var cake = ["", "Biscuitdeeg (1 euro pp)", "Chocolate (2 euro pp)", "Red velvet (3 euro pp)"];
    var bekleding = ["", "Fondant (1 euro pp", "Marsepein (3 euro pp)", "Beide (4 euro pp)"];
